{
    "name": "davedevelopment/dspec",
    "description": "A BDD spec style testing tool for PHP 5.3",
    "license": "MIT",

    "require-dev": {
        "behat/behat": "*",
        "davedevelopment/montserrat": "*@dev",
        "mockery/mockery": "*",
        "davedevelopment/hamcrest-php": "*@dev",
        "monolog/monolog": "*",
        "whatthejeff/nyancat-scoreboard": "~1.1"
    },

    "require": {
        "symfony/console": "~2.1",
        "symfony/finder": "~2.1",
        "symfony/event-dispatcher": "~2.1",
        "pimple/pimple": "~3.0"
    },

    "suggest": {
        "mockery/mockery": "For mocks and stubs",
        "monolog/monolog": "For logging",
        "symfony/yaml": "For yaml config files"
    },

    "autoload": {
        "psr-0": {
            "DSpec": "src/"
        }
    },

    "config": {
        "bin-dir": "bin"
    },

    "repositories": [
        {"type": "vcs", "url": "http://github.com/davedevelopment/hamcrest-php"}
    ],

    "bin": ["bin/dspec"],

    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
