{
    "name": "davedevelopment/dspec",
    "description": "A BDD spec style testing tool for PHP 5.3",
    "license": "MIT",

    "require-dev": {
    },

    "require": {
        "pimple/pimple": "~3.0",
        "symfony/console": "~3.2",
        "symfony/finder": "~3.2",
        "symfony/event-dispatcher": "~3.2"
    },

    "suggest": {
        "mockery/mockery": "For mocks and stubs",
        "monolog/monolog": "For logging",
        "symfony/yaml": "For yaml config files"
    },

    "autoload": {
        "psr-0": {
            "DSpec": "src/"
        }
    },

    "config": {
        "bin-dir": "bin"
    },

    "repositories": [
        {"type": "vcs", "url": "http://github.com/davedevelopment/hamcrest-php"}
    ],

    "bin": ["bin/dspec"],

    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
