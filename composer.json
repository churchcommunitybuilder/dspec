{
    "name": "davedevelopment/dspec",
    "minimum-stability": "dev",
    "description": "A BDD spec style testing tool for PHP 5.4",
    "license": "MIT",

    "require-dev": {
        "behat/behat": "*",
        "davedevelopment/montserrat": "*",
        "mockery/mockery": "*",
        "davedevelopment/hamcrest-php": "*",
        "monolog/monolog": "*"
    },

    "require": {
        "symfony/console": "2.1.*",
        "symfony/finder": "2.1.*",
        "symfony/event-dispatcher": "2.1.*",
        "pimple/pimple": "dev-master",
        "beberlei/assert": "*"
    },

    "suggest": {
        "mockery/mockery": "For mocks and stubs",
        "monolog/monolog": "For logging",
        "symfony/yaml": "For yaml config files"
    },

    "autoload": {
        "psr-0": {
            "DSpec": "src/"
        }
    },

    "config": {
        "bin-dir": "bin"
    },

    "repositories": [
        {"type": "vcs", "url": "http://github.com/davedevelopment/hamcrest-php"}
    ],

    "bin": ["bin/dspec"]
}
